# Configuration de base
NODE_ENV=development
PORT=3010

# Base de données Supabase
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# JWT Secret (générez une clé sécurisée de 128 caractères)
JWT_SECRET=your-super-secure-jwt-secret-key-here-make-it-very-long-and-random

# URL publique de l'API (pour les déploiements)
PUBLIC_BASE_URL=http://localhost:3010

# Configuration email (REQUIS pour l'envoi de codes de vérification)
# Pour Gmail, utilisez un "App Password" au lieu de votre mot de passe normal
# 1. Activez la validation en 2 étapes sur votre compte Google
# 2. Générez un "App Password" dans les paramètres de sécurité
# 3. Utilisez ce mot de passe ici
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-16-character-app-password

# Activation de l'envoi d'emails de vérification
SEND_VERIFICATION_EMAIL=true

# API externe (optionnel)
SERPAPI_KEY=your-serpapi-key-here

# Configuration CORS
CORS_ORIGIN=http://localhost:3010,https://your-domain.com

# Configuration de sécurité
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Configuration de géolocalisation
DEFAULT_TOLERANCE_RADIUS=50000
DEFAULT_LATITUDE=6.3725
DEFAULT_LONGITUDE=2.3542

# Configuration de l'application
APP_NAME=Presence CCRB
APP_VERSION=1.0.0
APP_DESCRIPTION=Système de suivi de présence des agents de terrain
